{
    "name": "theutz/laravel-unite",
    "description": "A unified toolkit for working with measurement units in Laravel",
    "keywords": [
        "theutz",
        "laravel",
        "laravel-unite"
    ],
    "homepage": "https://github.com/theutz/laravel-unite",
    "license": "MIT",
    "authors": [
        {
            "name": "Michael Utz",
            "email": "michael@theutz.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "brick/math": "^0.10.2",
        "illuminate/contracts": "^9.0",
        "spatie/laravel-package-tools": "^1.13.0",
        "symfony/yaml": "^6.1"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Theutz\\Unite\\": "src",
            "Theutz\\Unite\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Theutz\\Unite\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Theutz\\Unite\\UniteServiceProvider"
            ],
            "aliases": {
                "Unite": "Theutz\\Unite\\Facades\\Unite"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
